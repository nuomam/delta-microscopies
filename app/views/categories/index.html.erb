<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Catégories</h1>
      <p>Delta Microscopies vous propose plus de 12 000 produits classé au sein des <%= @categories.count %> catégories proposées.</p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <% @categories.each do |category| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-color: #999999;">
            <div class="card-category">Popular</div>
            <div class="card-description">
              <h2><%= category.name %></h2>
            </div>
            <%= link_to '', category_path(category), class: "card-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
