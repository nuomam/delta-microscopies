<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1><%= @category.name %></h1>
      <p><%= @category.sub_categories.count %> sous-cat√©gories sont disponibles au sein de <%= @category.name %>.</p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <% @category.sub_categories.each do |sub_category| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-color: #333333;">
            <div class="card-category"><%= sub_category.products.count %> produits disponibles</div>
            <div class="card-description">
              <h2><%= sub_category.name %></h2>
            </div>
            <%= link_to '', sub_category_path(sub_category), class: "card-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
