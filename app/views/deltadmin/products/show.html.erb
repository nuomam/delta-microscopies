<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1><%= @category.name %></h1>
      <div id="category-action">
        <%= link_to 'Editer', edit_deltadmin_category_path(@category), class: "btn btn-warning"  %>
        <%= link_to 'Supprimer', deltadmin_category_path(@category), method: :delete, class: "btn btn-danger" %>
      </div>
      <% if @category.photo? %>
        <div id="category-photo" class="text-center">
          <%= cl_image_tag @category.photo.path, width: 200, height: 300, crop: :fill %>
        </div>
      <% end %>
      <table class="table">
        <thead>
        <th>Sous-cat√©gories (<%= @category.sub_categories.count %>)</th>
        </thead>
        <tbody>
          <% @category.sub_categories.each do |sub_category| %>
            <tr>
              <td><%= link_to sub_category.name, deltadmin_sub_category_path(sub_category) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
